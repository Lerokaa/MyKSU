<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 1. Внешняя синяя рамка -->
    <item>
        <shape>
            <corners android:radius="6dp" />
            <stroke
                android:width="2dp"
                android:color="#1E30D3" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- 2. Белая обводка (внутри синей) -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape>
            <corners android:radius="4dp" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- 3. Серый фон прогресса (внутри белой обводки) -->
    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape>
            <corners android:radius="3dp" />
            <solid android:color="#E0E0E0" />
        </shape>
    </item>

    <!-- 4. ЗАПОЛНЯЕМАЯ ЧАСТЬ (только внутри серой области) -->
    <item android:id="@android:id/progress"
        android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <clip>
            <shape>
                <corners android:radius="3dp" />
                <solid android:color="#1E30D3" />
            </shape>
        </clip>
    </item>
</layer-list>
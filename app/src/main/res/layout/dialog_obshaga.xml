<!-- dialog_obshaga.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:layout_marginHorizontal="6dp"
    android:minWidth="300dp">

    <!-- Основной контейнер с закругленными углами -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Верхняя часть с синим фоном -->
            <LinearLayout
                android:id="@+id/topLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3164F7"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Изображение с отступами -->
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="16dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@drawable/other_image_rounded_corners"/>
            </LinearLayout>

            <!-- Нижняя часть с белым фоном -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <!-- Заголовки -->
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="4dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/nunito_black"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/nunito_black"/>

                <!-- Дополнительные поля информации -->
                <TextView
                    android:id="@+id/commandant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:fontFamily="@font/nunito_black"
                    android:textSize="14sp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="8dp"/>

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:fontFamily="@font/nunito_black"
                    android:textSize="14sp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="8dp"/>

                <TextView
                    android:id="@+id/institute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:fontFamily="@font/nunito_black"
                    android:textSize="14sp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="14dp"/>

                <!-- Контейнер для кнопок -->
                <LinearLayout
                    android:id="@+id/buttonsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"
                    android:paddingTop="0dp"
                    android:background="#3164F7">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <ImageButton
                            android:id="@+id/detailsButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:contentDescription="@string/details"
                            android:scaleType="centerInside"
                            android:src="@drawable/btn_icons_route" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Подробнее"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            android:fontFamily="@font/nunito_black"/>
                    </RelativeLayout>

                    <!-- Кнопка "Маршрут" с текстом поверх иконки -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <ImageButton
                            android:id="@+id/routeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_icons_route"
                            android:scaleType="centerInside"
                            android:background="@null"
                            android:contentDescription="@string/route"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Маршрут"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            android:fontFamily="@font/nunito_black"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
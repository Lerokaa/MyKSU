<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ksu_background"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        tools:context=".PuzzleActivity">

        <!-- Кнопка навигации -->
        <ImageButton
            android:id="@+id/navButton"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Навигация"
            android:src="@drawable/ic_navigation" />

        <!-- Центральная иконка -->
        <ImageButton
            android:id="@+id/centerButton"
            android:layout_width="170dp"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Центральная кнопка"
            android:src="@drawable/ic_ksu_icon" />

        <!-- Иконки в правом верхнем углу (столбец) -->
        <LinearLayout
            android:id="@+id/rightButtonsColumn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnShuffle"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/ic_shuffle"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Перемешать"
                android:layout_marginBottom="8dp"/>

            <ImageButton
                android:id="@+id/btnHint"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/ic_hint"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Подсказка"
                android:layout_marginBottom="8dp"/>

            <ImageButton
                android:id="@+id/btnReset"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:src="@drawable/ic_reset"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Сбросить"/>
        </LinearLayout>

        <!-- Заголовок "Пазлы" -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/navButton"
            android:layout_marginStart="16dp"
            android:layout_marginTop="90dp"
            android:text="Пазлы"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/gameArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleText"
            android:layout_marginTop="22dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <!-- Левая колонка с элементами (25% ширины) -->
            <GridView
                android:id="@+id/piecesGrid"
                android:layout_width="0dp"
                android:layout_height="400dp"
                android:layout_weight="1"
                android:numColumns="1"
                android:verticalSpacing="8dp"
                android:gravity="center"
                android:background="@drawable/puzzle_board_bg"
                android:padding="4dp"/>

            <!-- Поле для сборки (75% ширины) -->
            <FrameLayout
                android:id="@+id/puzzleBoard"
                android:layout_width="0dp"
                android:layout_height="400dp"
                android:layout_weight="3"
                android:background="@drawable/puzzle_board_bg_second"
                android:padding="8dp">

                <GridView
                    android:id="@+id/puzzleGrid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:horizontalSpacing="2dp"
                    android:numColumns="3"
                    android:verticalSpacing="2dp" />
            </FrameLayout>
        </LinearLayout>

        <!-- Кнопка Help внизу экрана -->
        <ImageButton
            android:id="@+id/btnHelp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/gameArea"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Help"
            android:src="@drawable/ic_help" />
    </RelativeLayout>
</ScrollView>